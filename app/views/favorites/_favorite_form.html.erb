<% if @article.is_favorited?(current_user) %>
  <%= form_tag unfavorite_article_path, method: :delete, :html => {class: "unfavorite-form"} do |f| %>
    <%= hidden_field_tag :article_id, @article.id %>
  <button class="fave-button"><i class="fa fa-bookmark-o" class="bookmark" aria-hidden="true"></i></button>
    <% end %>

  <% else %>
  <%= form_tag favorite_article_path, method: :create, :html => {class: "favorite-form"} do |f| %>
    <%= hidden_field_tag :article_id, @article.id %>
  <button class="fave-button"><i class="fa fa-bookmark" class="bookmark" aria-hidden="true"></i></button>
    <%end%>
<% end %>
